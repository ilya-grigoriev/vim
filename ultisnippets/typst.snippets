snippet d
upright(d)
endsnippet

snippet m "math mode"
$ $1 $
endsnippet

snippet bf "bold text"
*$1*
endsnippet

snippet cen "centering text"
#align(center)[
$1
]
endsnippet

snippet pb
#pagebreak()
endsnippet

snippet l "link"
#link("${1:url}")[${2:text}]
endsnippet

snippet t "text"
op("$1")
endsnippet

snippet b
\`$1\`
endsnippet

snippet img
#align(
  figure(image("$1"))
)
endsnippet

snippet var
#let $1 = $2
endsnippet
